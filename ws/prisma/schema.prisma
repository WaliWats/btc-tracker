generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-1.1.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Candle {
  id        Int      @id @default(autoincrement())
  symbol    String
  timeframe String
  timestamp BigInt
  open      Float
  high      Float
  low       Float
  close     Float
  volume    Float

  @@unique([symbol, timeframe, timestamp])
  @@index([symbol, timeframe])
}

